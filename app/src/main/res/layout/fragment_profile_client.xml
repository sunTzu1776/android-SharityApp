<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_expand"
        >

<LinearLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="testappparse.guilla.com.testappparse.testappparse.guilla.com.sharity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.87"
        android:orientation="vertical"
        android:weightSum="5"
        android:background="@drawable/elipse">


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"></View>

        <com.sharity.sharityUser.fonts.TextViewSegoeUi
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:Segoeui="segoeui.ttf"
            android:textAllCaps="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="SharePoints"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.9"
                android:layout_gravity="center_horizontal"
                >
                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/circularprogress"
                    app:cpb_background_progressbar_color="#FFFF"
                    app:cpb_background_progressbar_width="5dp"
                    app:cpb_progressbar_color="#FFFF"
                    app:cpb_progressbar_width="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/username_login"
                    tools:text="nom"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:gravity="center_vertical|center_horizontal" />
            </RelativeLayout>



            >
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="7dp"
            android:weightSum="4">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2.5"
                android:layout_gravity="bottom"
                android:layout_marginTop="4dp"
                android:background="@color/green"
                android:visibility="gone">
            </View>

        </LinearLayout><![CDATA[


        > ]]>
    </LinearLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.8"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/dons_view"
        android:visibility="visible"
        android:clickable="true"
        android:weightSum="2">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/recycler_charity"></android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical|center_horizontal|top"
            android:layout_weight="1.4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/charity_description"
            android:text=""
            android:visibility="visible"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/success_donate_view"
        android:visibility="invisible"
        android:clickable="true"
        android:layout_marginTop="20dp"
        android:weightSum="4"
        >

       <TextView
           android:layout_width="match_parent"
           android:layout_height="0dp"
            android:textColor="#000000"
           android:layout_weight="0.7"
           android:textSize="17sp"
           android:gravity="center_horizontal|center_vertical"
           android:text="Tu viens de donner"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:id="@+id/success_donate_sharepoint"
            android:gravity="center_horizontal|center_vertical"
            tools:text=" De SharePoint "/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:textColor="#000000"
            android:textSize="17sp"
            android:id="@+id/success_donate_tobusiness"
            android:gravity="center_horizontal|center_vertical"
            tools:text="Ã  la ligue contre le cancer"/>


    </LinearLayout>

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.12"
        android:background="@drawable/donbutton">

        <com.sharity.sharityUser.fonts.TextViewMontSerra
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24dp"
            app:Montserra="montserra.ttf"
            android:visibility="visible"
            android:id="@+id/sharepoints_plus"
            android:text="+"
            android:textStyle="bold"
            android:layout_alignTop="@+id/sharepoints_moins"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/dummyanchor"
            tools:text="fff"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/do_donationTV"
            android:layout_toEndOf="@+id/do_donationTV">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="Faire un don"
            android:textColor="@color/white"
            android:id="@+id/do_donationTV"
            android:textSize="17dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="24dp"
            android:id="@+id/sharepoints_moins"
            android:visibility="visible"
            android:text="-"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/do_donationTV"
            android:layout_toRightOf="@+id/do_donationTV"
            android:layout_toEndOf="@+id/do_donationTV"/>

        <com.sharity.sharityUser.fonts.TextViewGeoManis
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            tools:text="Points"
            app:GeomanisRegular="geomanistregular.ttf"
            android:layout_weight="2.5"
            android:id="@+id/points"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/sharepoints_plus"
            android:layout_toRightOf="@+id/sharepoints_moins"
            android:layout_toEndOf="@+id/sharepoints_moins"/>

    </RelativeLayout>

</LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>
